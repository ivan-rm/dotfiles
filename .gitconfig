[user]
	name = Iv√°n Ruiz Marcos
	email = ivanrm@norabide.com
[color]
	branch = auto
	diff = auto
	status = auto
[core]
	editor = zed
	excludesfile = /Users/ivan/.gitignore_global
	autocrlf = input
[init]
	defaultBranch = main
[pull]
	rebase = true
[alias]
	st = status -sb
	ll = log --oneline
	last = log -1 HEAD --stat
	cm = commit -m
	rv = remote -v
	d = diff
	dv = difftool -t vimdiff -y
	se = !git rev-list --all | xargs git grep -F
	tree = log --graph --decorate --pretty=oneline --abbrev-commit
[help]
	autocorrect = 1
[push]
	autoSetupRemote = true
